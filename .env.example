# MongoDB Atlas Connection
MONGO_URI="mongodb+srv://USER:PASS@your-cluster.xxxxxx.mongodb.net/?retryWrites=true&w=majority"

# Database Selection (choose one option):
# Option 1: Multiple databases (comma-separated) - RECOMENDADO PARA SERVIDORES CON MÃšLTIPLES APPS
MONGO_DBS="webapp,api,logs,analytics"

# Option 2: Single database (for backward compatibility)
# MONGO_DB="webapp"

# Option 3: All databases (leave both MONGO_DBS and MONGO_DB empty)

# Backup Settings
BACKUP_PREFIX="backup"
RETENTION_DAYS=14
OUTPUT_DIR="/backups"

# Scheduling (optional - leave empty for single execution)
CRON_SCHEDULE="0 3 * * *"

# Notifications
NOTIFY_ON="fail"  # Options: fail, success, both
TELEGRAM_TOKEN="your_bot_token_here"
TELEGRAM_CHAT_ID="your_chat_id_here"

# Timezone
TZ="America/Argentina/Buenos_Aires"

# AWS S3 Configuration (Optional)
S3_UPLOAD=false  # Set to true to enable S3 uploads
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=your-backup-bucket-name
S3_PREFIX=mongodb-backups/
S3_STORAGE_CLASS=STANDARD  # STANDARD, STANDARD_IA, GLACIER, etc.
MULTIPART_THRESHOLD=100MB  # Files larger than this use multipart upload
KEEP_LOCAL_BACKUP=true  # Keep local copy after S3 upload

# Health Check Settings
HEALTH_MAX_AGE_MIN=360  # 6 hours
ALERT_HEALTH=1
ALERT_COOLDOWN_MIN=60
